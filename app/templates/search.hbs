{{outlet}}



{{#bs-dropdown}}
  {{#bs-dropdown-button}}Sort: Best match <span class="caret"></span>{{/bs-dropdown-button}}
  {{#bs-dropdown-menu}}
    <li value="Most Stars">{{#link-to "search" (query-params s="&sort=stars&order=desc")}}Most Stars{{/link-to}}</li>
    <li>{{#link-to "search" (query-params s="&sort=stars&order=asc")}}Least Stars{{/link-to}}</li>
    <li>{{#link-to "search" (query-params s="&sort=forks&order=desc")}}Most Forks{{/link-to}}</li>
    <li>{{#link-to "search" (query-params s="&sort=forks&order=asc")}}Least Forks{{/link-to}}</li>
  {{/bs-dropdown-menu}}
{{/bs-dropdown}}

<ul>
{{#each model.items as |repos|}}
    <li>{{repos.full_name}}</li>
    {{repos.description}}
{{/each}}
</ul>
