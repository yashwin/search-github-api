{{yield}}



{{#each sortedRepos as |repo|}}
  <div class="col-md-7 col-md-offset-3 repositories">
    <h3>{{repo.full_name}}</h3>
    <h5 class="description">{{repo.description}}</h5>
    <ul class="properties">
      <h5 title="Language" class="col-md-3 glyphicon glyphicon-comment attribute"> {{repo.language}}</h5>
      <h5 title="Forks" class="col-md-3 glyphicon glyphicon-link attribute"> {{repo.forks_count}}</h5>
      <h5 title="Watchers" class="col-md-3 glyphicon glyphicon-time attribute"> {{repo.watchers_count}}</h5>
      <h5 title="Stargazers" class="col-md-3 glyphicon glyphicon-star attribute"> {{repo.stargazers_count}}</h5>
    </ul>
  </div>
{{/each}}
